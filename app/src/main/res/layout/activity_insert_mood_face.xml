<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/facebg3"
    android:gravity="center"
    tools:context=".insertMoodFace">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/acme"
        android:text="How are you doing today?"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="190dp"
        android:max="8"
        android:progress="2"
        android:progressTint="#FEAE9F"
        android:progressTintMode="multiply"
        android:thumbTintMode="multiply"
        app:tickMarkTintMode="multiply" />

    <ImageView
        android:id="@+id/moodFace"
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:padding="110dp"
        android:src="@drawable/good"/>

    <TextView
        android:id="@+id/moodTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="290dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="good"
        android:textAllCaps="true"
        android:textSize="18dp" />

    <Button
        android:id="@+id/contBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:backgroundTint="#423660"
        android:onClick="contFunc"
        android:text="continue" />

<!--    Bottom Bar -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="610dp"
            android:layout_weight="1"
            android:background="@drawable/asset_7" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="56dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/asset_9"
            android:contentDescription="@null"
            android:onClick="goSetting"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="110px"
            android:layout_height="110px"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="313dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/asset_8"
            android:contentDescription="@null"
            android:onClick="goSessions"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="215px"
            android:layout_height="215px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="570dp"
            android:background="@drawable/asset_11"
            android:contentDescription="@null"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="575dp"
            android:background="@drawable/asset_12"
            android:contentDescription="@null"
            android:onClick="goTimeLine"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="140px"
            android:layout_height="70px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="595dp"
            android:background="@drawable/asset_13"
            android:contentDescription="@null"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:text="MOOD TIMELINE"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>